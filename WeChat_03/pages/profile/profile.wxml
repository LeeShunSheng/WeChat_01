            <view class="li_top">{{items[0].title}}</view>
            <view class="li_bottom">
              <view class="count">{{items[0].count}}</view>看过
            </view>
          </view>
          <view class="right_info">
            <view class="text">{{items[0].detail}}</view>
            <view class="begin">立即开启</view>
          </view>
        </view>
      </view>
      <view class="item">
        <text class="iconfont {{items[1].icon}}"/>
