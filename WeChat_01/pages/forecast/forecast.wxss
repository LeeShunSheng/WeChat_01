/* 中间的4天天气数据展示 */
.body{
  height: 80%;
}
.day{
  margin: 50rpx 0;
  width:100%;
  height: 100%;
}
.date{
  text-align: center;
  font-weight: bolder;
}
.weather{
  float: left;
  width: 50%;
  margin: 20rpx 0;
  padding-top: 30rpx;
  height: 100%;
  text-align: center;
}
.white{
  background-color: white;
  color:black;
}
.black{
  background-color: black;
  color: white;
}
.weather view{
  margin:20rpx 0;
  font-size: 40rpx;
  line-height: 60rpx;
}
.iconfont{
  display: block;
  font-size: 200rpx;
  margin-top: 100rpx;
}